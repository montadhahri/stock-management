<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="org.montadhr.stockManagement.controllers.LoginController">
  <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
    <font>
      <Font name="System Bold" size="12.0" fx:id="x1" />
    </font>
  </Label>
  <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
  <Label font="$x1" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
  <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
  <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
    <Button blendMode="DARKEN" font="$x1" onAction="#handleSubmitButtonAction" text="Sign In" textFill="#4333ff" textOverrun="ELLIPSIS" />
  </HBox>
  <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
  </columnConstraints>
  <padding>
    <Insets bottom="10.0" left="25.0" right="25.0" top="25.0" />
  </padding>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
  <Text fill="RED" text="Welcome" GridPane.columnIndex="1" GridPane.rowIndex="0">
    <font>
      <Font name="System Bold" size="15.0" />
    </font>
  </Text>
</GridPane>
